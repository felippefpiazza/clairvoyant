= form_tag admin_device_index_path, name: "Busca" , id: "Busca" , method: 'post' do
	.field
		%table{width: "60%"}
			%tr
				%td{width: "70%"}
					= text_field_tag  "busca", params[:busca], class: 'big'
				%td{width: "30%"}
					= submit_tag "Buscar", class: 'button button-big blue'
	.report_table
		- if @resources != nil and @resources.length > 0 
			%table.borders{width: "80%"}
				%thead
					%tr
						%th
							Serial
						%th
							Controlle
						%th
							Editar															

				- @resources.each do |r|
					%tr
						%td
							= r.serial
						%td
							= r.device_name
						%td
							= link_to "Editar" , '/admin/device/' + r.id.to_s						
	